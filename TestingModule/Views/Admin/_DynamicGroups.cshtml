@using TestingModule.Models
@model List<Group>

@{HtmlHelper.UnobtrusiveJavaScriptEnabled = true;}

@for (int i = 0; i < Model.Count; i++)
{
    <div class="groupItem">
        <label for="@Model[i].Id">
            <span class="groupItem_title">@Model[i].Name </span>
            @Html.CheckBoxFor(r => Model[i].IsSelected, new { id = Model[i].Id, @class = "startLecture_disciplineSelect" })
            @Html.HiddenFor(t => Model[i].Id)
        </label>
    </div>
}
