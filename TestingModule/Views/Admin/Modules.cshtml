@model IEnumerable<TestingModule.Models.Module>
@{
    ViewBag.Title = "Modules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Модулі</h2>
@if (!Model.Any())
{
    <h3>Немає жодного модуля...</h3>
}
else
{
    <table border="1">
        <tr><th>Назва</th><th>Дії</th></tr>


        @foreach (var item in Model)
        {
            <tr>
                <td><a href="modules/@item.Id/questions">@item.Name</a></td>
                <td><a href="EditModule">Редагувати</a>/<a href="modules/@item.Id/Delete">Видалити</a></td>
            </tr>
        }


    </table>
}
<hr>

<h3>Створити нову?</h3>

@using (Html.BeginForm("NewModule", "Admin", FormMethod.Post))
{
    <form>
        <div>
            Введіть назву лекції:
            @Html.TextBoxFor(model => model.LastOrDefault().Name)
            </div>
            @Html.HiddenFor(model => model.LastOrDefault().LectureId)
            @Html.HiddenFor(model => model.LastOrDefault().DisciplineId)
        <div>
            <button type="submit">Створити</button>
        </div>
    </form>
}