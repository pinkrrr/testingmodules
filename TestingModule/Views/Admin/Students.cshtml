@model IEnumerable<TestingModule.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Студенти</h2>
@if (!Model.Any())
{
    <h3>Немає жодного студента...</h3>
}
else
{
    <table border="1">
        <tr><th>Ім'я</th><th>Прізвище</th><th>Username</th><th>Password</th><th>Дії</th></tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Login</td>
                <td>@item.Password</td>
                <td><a href="EditStudent">Редагувати</a>/<a href="students/@item.Id/Delete">Видалити</a></td>
            </tr>
        }


    </table>
}
<hr>

<h3>Додати студента?</h3>

@using (Html.BeginForm("NewStudent", "Admin", FormMethod.Post))
{
    <form>
        <div>
            Введіть ім'я студента:
            @{
                var name = Model.LastOrDefault();
            }
            @if (name == null)
            {
                @Html.TextBoxFor(model => model.LastOrDefault().Name, new { @class = "form - control" })
            }
            else
            {
                @Html.TextBoxFor(model => model.LastOrDefault().Name, name.Name = "", new { @class = "form - control" })
            }
        </div>
        Введіть прізвище студента:
        @{
            var surname = Model.LastOrDefault();
        }
        @if (surname == null)
        {
            @Html.TextBoxFor(model => model.LastOrDefault().Surname, new { @class = "form - control" })
        }
        else
        {
            @Html.TextBoxFor(model => model.LastOrDefault().Surname, surname.Surname = "", new { @class = "form - control" })
        }
        <div>
            @Html.HiddenFor(model => model.LastOrDefault().GroupId)
            @Html.HiddenFor(model => model.LastOrDefault().SpecialityId)
        </div>
        <div>
            <button type="submit">Створити</button>
        </div>
    </form>
            }
<div class="popup popup-remove">
    <div class="popup-body">
        <div class="popup-content">
            <div class="popup-title">Дійсно видалити <span></span>?</div>
            <form>
                <button class="btn popup-btn popup-remove-btn">Видалити</button>
                <button class="btn popup-btn popup-cancel-btn closePopupBtn">Відмінити</button>
            </form>
        </div>
    </div>
</div>
