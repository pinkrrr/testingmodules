@model IEnumerable<TestingModule.Models.Group>
@{
    ViewBag.Title = "Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Групи</h2>
@if (!Model.Any())
{
    <h3>Немає жодної групи...</h3>
}
else
{

    <table class="table" border="1">
        <tr class="table-row table-header-row"><th class="table-header table-header_name">Назва</th><th class="table-header">Дії</th></tr>

        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td class="table-item table-item_name"><a data-id="@item.Id" href="groups/@item.Id/students" class="table-item_name_text">@item.Name</a></td>
                <td class="table-item table-item_edit">
                    <div class="table-button table-edit-button"><i class='fa fa-pencil' aria-hidden='true'></i>Редагувати</div>
                    <div data-remove="groups/@item.Id/Delete" class="table-button table-remove-button"><i class='fa fa-trash' aria-hidden='true'></i>Видалити</div>

                </td>
            </tr>
        }

    </table>
}
<hr>

<h3>Створити нову?</h3>
@using (Html.BeginForm("NewGroup", "Admin", FormMethod.Post))
{
    <form>
        <div>
            Введіть назву групи:

            @{
                var name = Model.LastOrDefault();
            }
            @if (name == null)
            {
                @Html.TextBoxFor(model => model.LastOrDefault().Name, new { @class = "form - control" })
            }
            else
            {
                @Html.TextBoxFor(model => model.LastOrDefault().Name, name.Name = "", new { @class = "form - control" })
            }

        </div>
        @Html.HiddenFor(model => model.LastOrDefault().Id)
        @Html.HiddenFor(model => model.LastOrDefault().SpecialityId)
        <div>
            <button type="submit">Створити</button>
        </div>
    </form>
                }


<div class="popup popup-edit">
    <div class="popup-body">
        <div class="popup-content">
            @using (Html.BeginForm("EditGroup", "Admin", FormMethod.Post))
            {
                <div class="popup-title">Редагування</div>
                <form>
                    @Html.TextBoxFor(model => model.FirstOrDefault().Name, new { @class = "input-text" })
                    @Html.HiddenFor(model => model.FirstOrDefault().Id, new { @id = "id" })
                    @Html.HiddenFor(model => model.FirstOrDefault().SpecialityId)
                    <button class="btn popup-btn popup-save-btn" type="submit">Зберегти</button>
                    <button class="btn popup-btn popup-cancel-btn closePopupBtn">Відмінити</button>
                </form>
            }
        </div>
    </div>
</div>

<div class="popup popup-remove">
    <div class="popup-body">
        <div class="popup-content">
            <div class="popup-title">Дійсно видалити <span></span>?</div>
            <form>
                <button class="btn popup-btn popup-remove-btn">Видалити</button>
                <button class="btn popup-btn popup-cancel-btn closePopupBtn">Відмінити</button>
            </form>
        </div>
    </div>
</div>

<div class="popup popup-add">
    <div class="popup-body">
        <div class="popup-content">
            <div class="popup-title">Створити нову спеціальність</div>
            @using (Html.BeginForm("NewGroup", "Admin", FormMethod.Post, new { @class = "addNewItem-form" }))
            {
                <form>
                    @{
                        var name = Model.LastOrDefault();
                    }
                    @if (name == null)
                    {
                        @Html.TextBoxFor(model => model.LastOrDefault().Name, new { @class = "input-text" })
                    }
                    else
                    {
                        @Html.TextBoxFor(model => model.LastOrDefault().Name, name.Name = "", new { @class = "input-text" })
                    }
                    <button class="btn popup-btn popup-create-btn" type="submit">Додати</button>
                    <button class="btn popup-btn popup-cancel-btn closePopupBtn">Відмінити</button>
                </form>
                        }
        </div>
    </div>
</div>