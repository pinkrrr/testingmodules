@model IEnumerable<TestingModule.Models.Speciality>
@{
    ViewBag.Title = "Specialities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Спеціальності</h2>
@if (!Model.Any())
{
    <h3>Немає жодної спеціальності...</h3>
}
else
{
    <table class="table" border="1">
        <tr class="table-row"><th class="table-header">Назва</th><th class="table-header">Дії</th></tr>

        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td class="table-item table-item_name"><a data-id="@item.Id" href="specialities/@item.Id/groups" class="table-item_name_text">@item.Name</a></td>
                <td class="table-item table-item_edit">
                    <div class="table-edit-button">Редагувати</div>
                    <div data-remove="specialities/@item.Id/Delete" class="table-remove-button">Видалити</div> <!--<a href="specialities/@item.Id/Delete">Видалити</a>-->
                    <!--<a href="EditSpeciality">Редагувати</a>-->
                    
                </td>
            </tr>
        }

    </table>
}
<hr>
<h3>Створити нову?</h3>
@using (Html.BeginForm("NewSpeciality", "Admin", FormMethod.Post))
{
    <form>
        <div>
            Введіть назву спеціальності:
            @{
                var name = Model.LastOrDefault();
            }
            @if (name == null)
            {
                @Html.TextBoxFor(model => model.LastOrDefault().Name, new { @class = "form - control" })
            }
            else
            {
                @Html.TextBoxFor(model => model.LastOrDefault().Name, name.Name = "", new { @class = "form - control" })
            }
            <button type="submit">Створити</button>
        </div>
    </form>
}

<div class="popup popup-edit">
    <div class="popup-body">
        <div class="popup-content">
            @using (Html.BeginForm("EditSpeciality", "Admin", FormMethod.Post))
            {
                <div class="popup-title">Редагування</div>
                <form>
                    @Html.TextBoxFor(model => model.FirstOrDefault().Name, new { @class = "input-text" })
                    @Html.HiddenFor(model => model.FirstOrDefault().Id, new { @id = "id" })
                    <button class="btn popup-btn popup-save-btn" type="submit">Зберегти</button>
                    <button class="btn popup-btn popup-cancel-btn closePopupBtn">Відмінити</button>
                </form>
            }
        </div>
    </div>
</div>

<div class="popup popup-remove">
    <div class="popup-body">
        <div class="popup-content">
            @using (Html.BeginForm("EditSpeciality", "Admin", FormMethod.Post))
            {
                <div class="popup-title">Дійсно видалити <span></span>?</div>
                <form>
                    <button class="btn popup-btn popup-remove-btn">Видалити</button>
                    <button class="btn popup-btn popup-cancel-btn closePopupBtn">Відмінити</button>
                </form>
            }
        </div>
    </div>
</div>