@model IEnumerable<TestingModule.Models.Speciality>
@{
    ViewBag.Title = "Specialities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Спеціальності</h2>
@if (!Model.Any())
{
    <h3>Немає жодної спеціальності...</h3>
}
else
{
    <table class="table" border="1">
        <tr class="table-row"><th class="table-header">Назва</th><th class="table-header">Дії</th></tr>

        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td class="table-item table-item_name"><a href="specialities/@item.Id/groups" class="specialityName">@item.Name</a></td>
                <td class="table-item table-item_edit">
                    <div class="table-edit-button">Редагувати</div>
                    <div class="table-remove-button">Видалити</div>
                    <!--<a href="EditSpeciality">Редагувати</a>-->
                    <!--<a href="specialities/@item.Id/Delete">Видалити</a>-->
                </td>
            </tr>

        }


    </table>
}
<hr>
<h3>Створити нову?</h3>
@using (Html.BeginForm("NewSpeciality", "Admin", FormMethod.Post))
{
    <form>
        <div>
            Введіть назву спеціальності:
            @Html.TextBoxFor(model => model.Last().Name)
            <button type="submit">Створити</button>
        </div>
    </form>
}

<div class="popup popup-edit-specialities">
    <div class="popup-body">
        <div class="popup-content">
            @using (Html.BeginForm("EditSpeciality", "Admin", FormMethod.Post))
            {
                <form>
                    <input class="input-text" type="text" />
                    <button class="btn popup-btn popup-save-btn" type="submit">Зберегти</button>
                    <button class="btn popup-btn popup-cancel-btn">Відмінити</button>
                </form>
            }
        </div>
    </div>
</div>