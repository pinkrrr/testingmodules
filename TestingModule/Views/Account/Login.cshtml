@model TestingModule.Models.Account
@{
    ViewBag.Title = "Авторизація";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@if (TempData["FailLogin"] != null)
{
    <div class="isa_error">
        <i class="fa fa-times-circle"></i>
        @TempData["FailLogin"]
    </div>
}

@using (Html.BeginForm("LoginAttempt", "Account", FormMethod.Post, new { @class = "login-form" }))
{
    <div class="form-title">Авторизація</div>
    <div class="form-group">
        @*@Html.LabelFor(a => a.Login, new { @class = "label label-login" })*@
        @Html.TextBoxFor(a => a.Login, new { @class = "input-text", @placeholder = "Ім'я користувача" })
    </div>
    <div class="form-group">
        @*@Html.LabelFor(a => a.Password, new { @class = "label label-password" })*@
        @Html.TextBoxFor(a => a.Password, new { @class = "input-text", @type = "password", @placeholder = "Пароль" })
    </div>
    @Html.AntiForgeryToken()
    <button class="loginBtn" type="submit"><i class="fa fa-sign-in" aria-hidden="true"></i>Увійти</button>
}