@model TestingModule.ViewModels.RegistrationFormViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RegistrationView</h2>

@using (Html.BeginForm("RegistrationSave", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Name)
        @Html.TextBoxFor(m => m.Student.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Surname)
        @Html.TextBoxFor(m => m.Student.Surname, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Email)
        @Html.TextBoxFor(m => m.Student.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Pass)
        @Html.TextBoxFor(m => m.Student.Pass, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.GroupId)
        @Html.DropDownListFor(m => m.Student.GroupId, new SelectList(Model.Groups, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.SpecialityId)
        @Html.DropDownListFor(m => m.Student.SpecialityId, new SelectList(Model.Specialities, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}