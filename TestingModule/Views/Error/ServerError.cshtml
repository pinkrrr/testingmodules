
@{
    ViewBag.Title = "Неполадки";
    var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
    var c = claimsIdentity.FindFirst(System.Security.Claims.ClaimTypes.Role);
    if (Request.IsAuthenticated)
    {
        if (c.Value.ToString() != "Student")
        {
            Layout = "~/Views/Shared/_Layoutadmin.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutStudent.cshtml";
        }
    }
}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
    .w3-btn {width:150px;}
</style>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Отакої!
                </h1>
                
                <div class="error-details">
                    Вибачаємось за технічні неполадки! Ми виправимо це як тільки знайдемо причину помилки.
                </div>
                <div class="error-actions">
                    <a href="/" class="w3-button w3-black w3-round-xxlarge">
                        <span class="glyphicon glyphicon-home"></span>
                        Домашня сторінка
                    </a><a href="javascript:history.go(-1)" class="w3-button w3-teal w3-round-xxlarge"><span class="glyphicon glyphicon-envelope"></span> Повернутись назад </a>
                </div>
            </div>
        </div>
    </div>
</div>
